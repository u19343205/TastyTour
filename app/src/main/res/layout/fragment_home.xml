<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">

    <TextView
        android:id="@+id/welcomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Good Morning,"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="235dp"
        android:text="Jane"
        android:textSize="35dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/profileutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="8dp"
        android:text="JD"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:background="@drawable/profile_circle"/>

    <TextView
        android:id="@+id/foryouTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTv"
        android:text="For You"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/purple_200"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/exTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nameTv"
        android:layout_marginLeft="90dp"
        android:text="Experiences"
        android:textSize="20dp"
        android:padding="10dp"
        android:textColor="@color/darkgrey"
        android:textStyle="bold" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/foryouTv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_button2"
        android:text="Today:10:00, 2"
        android:textSize="12dp"
        android:drawableEnd="@drawable/baseline_person_24"
        android:textColor="@color/purple_200" />

    <Button
        android:id="@+id/locationButton"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/foryouTv"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        android:background="@drawable/shape_button2"
        android:text="Current Location"
        android:textColor="@color/darkgrey" />

    <TextView
        android:id="@+id/grabTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/timeButton"
        android:padding="10dp"
        android:text="Grab Yourself Breakfast"
        android:textSize="18dp"
        android:textColor="@color/purple_200"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/viewAllTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/timeButton"
        android:padding="10dp"
        android:text="View All"
        android:textSize="18dp"
        android:layout_marginLeft="320dp"
        android:textFontWeight="1"
        android:textColor="@color/purple_200"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/restaurantsRv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/grabTv"
            android:padding="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_restuarant" >

    </androidx.recyclerview.widget.RecyclerView>


    <ImageView
        android:id="@+id/resImg"
        android:layout_width="94dp"
        android:layout_height="114dp"
        android:layout_below="@id/grabTv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/tastevietnam"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/res2Img"
        android:layout_width="94dp"
        android:layout_height="114dp"
        android:layout_below="@id/grabTv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/middletons"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/res3Img"
        android:layout_width="94dp"
        android:layout_height="114dp"
        android:layout_below="@id/grabTv"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/cafetwoten"
        android:padding="10dp" />




</RelativeLayout>